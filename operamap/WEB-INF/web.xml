<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE web-app
          PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
          "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<!-- $Id: web.xml,v 1.14 2007/07/13 12:09:21 geir.gronmo Exp $ -->

<web-app>

  <display-name>The Ontopia OperaMap</display-name>
  <description>
    A web portal containing historical information about 19th
    Century Italian Operas from Verdi to Zandonai.
  </description>
  <context-param>
    <param-name>app_config</param-name>
    <param-value>../omnigator/WEB-INF/config/application.xml</param-value>
    <description>
      Tells the web application where to find the
      application configuration file.
    </description>
  </context-param>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Navigator Tag Library Descriptors -->
  <taglib>
      <taglib-uri>/WEB-INF/jsp/nav2-logic.tld</taglib-uri>
      <taglib-location>/WEB-INF/jsp/nav2-logic.tld</taglib-location>
  </taglib>
  <taglib>
      <taglib-uri>/WEB-INF/jsp/nav2-output.tld</taglib-uri>
      <taglib-location>/WEB-INF/jsp/nav2-output.tld</taglib-location>
  </taglib>
  <taglib>
      <taglib-uri>/WEB-INF/jsp/nav2-value.tld</taglib-uri>
      <taglib-location>/WEB-INF/jsp/nav2-value.tld</taglib-location>
  </taglib>
  <taglib>
      <taglib-uri>/WEB-INF/jsp/nav2-TMvalue.tld</taglib-uri>
      <taglib-location>/WEB-INF/jsp/nav2-TMvalue.tld</taglib-location>
  </taglib>

</web-app>


